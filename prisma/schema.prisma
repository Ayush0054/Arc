generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Profile {
id     String @id @default(uuid())
  userId String @unique
name    String
email   String
phone   Int
goals  Goal[]
// habits habit[]
 createdAt DateTime @default(now())
}
